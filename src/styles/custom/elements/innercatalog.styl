.innercatalog

	&__filters
		display flex
		flex-wrap wrap
		h5
			font-weight bold
			flex 0 0 100%
		margin-top 10px
		background #f2f2f2
		padding 20px
		label
			display block
			flex 0 0 100%
			@media screen and (max-width: $screen-sm-max)
				flex 0 0 50%
				padding-right 20px
			input[type="checkbox"]
				display none
				& + span
					display block
					padding 5px 0 5px 27px
					position relative
					font-weight normal
					&:before
						position absolute
						content "\f00c"
						font-family FontAwesome
						font-size 10px
						font-weight normal
						display block
						width 16px
						height 16px
						background $white
						color $white
						border-radius 2px
						left 0
						top 7px
						padding-top 1px
						padding-left 3px
						transition 350ms
				&:checked + span
					&:before
						color $brand-primary
			input[type="radio"]
				display none
				& + span
					display block
					padding 5px 0 5px 27px
					position relative
					font-weight normal
					&:before
						position absolute
						content "\f0c8"
						font-family FontAwesome
						font-size 10px
						font-weight normal
						display block
						width 16px
						height 16px
						background $white
						color $white
						border-radius 2px
						left 0
						top 7px
						padding-top 1px
						padding-left 4px
						transition 350ms
				&:checked + span
					&:before
						color $brand-primary
		input[type="text"]
			border 1px solid #ededed
			display block
			float left
			color #797979
			max-width (100% / 3)
			padding 3px 5px
			font-style italic
		.slider-range-line
			display block
			float left
			width calc((100% / 3) - 20px)
			height 1px
			background black
			margin 10px 10px 0
		button
			display block
			width 100%
			border none
			height 37px
			text-align center
			padding 3px 0
			margin-bottom 5px
			@media screen and (max-width: $screen-sm-max)
				flex 1 0 50%
				min-width 150px
			&.find
				font-weight bold
				color $white
				background $brand-primary
				transition 350ms
				&:hover
					background #df3400
					box-shadow inset 0 0 1px 1px #eee
			&.clear
				color #242424
				background transparent
				font-size 12px

	&__menu
		margin-top 9px
		padding 14px 0
		background #f2f2f2
		margin-bottom 20px
		a
			display block
			padding 10px 18px
			height 36px
			border-right 2px solid transparent
			transition 350ms
			color #000
			text-decoration none
			&:hover
			&:focus
			&.active
				background #ffd1c4
				border-right-color $brand-primary

	&__item
		border 1px solid #e5e5e5
		padding 25px 30px
		display flex
		flex-wrap wrap
		margin-bottom 14px
		.img
			flex 0 0 auto
			margin-right 20px
			margin-top 10px
		img
			max-width 100%
			height auto
		.description
			flex 1 1 150px
		table
			flex 0 0 100%
			width 100%
			margin-top 20px
			button
				width 90px
				color #1e2227
				border 1px solid currentColor
				border-radius 2px
				transition 350ms
				background transparent
				padding 4px
				text-align center
				font-size 12px
				&:hover
					background $brand-primary
					border-color $brand-primary
					color $white
		@media screen and (min-width: $screen-sm)
			table
				border-collapse separate
				border-spacing 0 3px

				th
					background $brand-primary
					color $white
				td
					background #f2f2f2
				th
				td
					padding 5px
					&:first-child
						border-radius 4px 0 0 4px
					&:last-child
						border-radius 0 4px 4px 0
						padding 3px
						width 96px
				button
					width 90px
					color #1e2227
					border 1px solid currentColor
					border-radius 2px
					transition 350ms
					background transparent
					padding 4px
					text-align center
					font-size 12px
					&:hover
						background $brand-primary
						border-color $brand-primary
						color $white
		@media screen and (max-width: $screen-xs-max)
			table
			tbody
			tr
				display block
				width 100%
				margin-top 10px
			td
				display block
				width 100%
				padding 3px
				border-bottom 1px solid #e4e4e4
				&:before
					display block
					content attr(data-label)
					width 50%
					float left
					color #828282
				&:first-child
					border-bottom 1px solid $brand-primary
			button
				margin-left 50%
			thead
				display none


// UI slider
.ui-slider
	position relative
	height 10px
	background #3e454d
	border-radius 5px
	margin-top 15px
	margin-bottom 20px
	flex 0 0 100%
	.ui-slider-range
		position absolute
		height 100%
		background $brand-primary
	.ui-slider-handle
		position absolute
		width 10px
		height 18px
		margin-left -5px
		top -4px
		border-radius 2px
		background #707e8d
