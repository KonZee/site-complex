.gratitude
	position relative
	&__image
		width 100%
		max-width 100%
		height auto
	&__text
		position absolute
		left 50%
		top 50%
		transform translate(-50%,-50%)
		text-align center
		color $white
		> .title
			font-size 35px
			line-height 65px
			font-weight bold
			text-shadow 0px 2px 3px #333
			@media screen and (max-width: $screen-sm-max)
				font-size 28px
				line-height 1.2
			@media screen and (max-width: $screen-xs-max)
				font-size 24px
		> .description
			font-size 20px
			text-shadow 0px 2px 3px #333
			@media screen and (max-width: $screen-sm-max)
				font-size 18px
			@media screen and (max-width: $screen-xs-max)
				display none
		> .button
			margin-top 20px
			display inline-block
			background $brand-primary
			color $white
			padding 7px 27px
			height 37px
			font-size 15px
			font-weight bold