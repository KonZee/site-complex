.production
	&__all-goods
		display block
		position absolute
		right 15px
		top 45px
		font-size 16px
		text-decoration none
		color #1d212b
		border-bottom 1px dashed currentColor
		transition 350ms
		&:hover
			text-decoration none
			color $brand-primary
			border-color currentColor
		@media screen and (min-width: $screen-sm)
			font-size 18px
		@media screen and (min-width: $screen-md)
			font-size 20px
	&__catalog
		height 240px
		background $brand-primary
		color $white
		padding 10px 8px
		text-align center
		line-height 2em
		font-weight 600
		position relative
		margin-bottom 30px
		a
			display block
			color inherit
			&:hover
				font-weight bold
	&__info
		height 240px
		border 1px solid $gray-lighter
		position relative
		margin-bottom 30px
		img
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)
			max-width calc(100% - 2px)
			max-height 238px
		.text
			position absolute
			display block
			left 8px
			right 8px
			bottom 10px
			padding 10px 13px
			background $brand-primary
			color $white
			font-weight bold

