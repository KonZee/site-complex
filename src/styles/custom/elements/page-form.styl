.page-form
	border-top 5px solid $brand-primary
	border-radius 5px
	padding 25px
	background #f5f5f5
	margin 23px 0
	@media screen and (min-width: $screen-md)
		position relative
		top -63px
	&:after
		display table
		content ""
		clear both

	&__title
		color $brand-primary
		font-size 20.8px
		text-transform uppercase
		font-weight bold
		margin-bottom 35px

	&__input
		width 100%
		border 1px solid #fa987a
		border-radius 4px
		margin-bottom 25px
		padding 9px 10px
		&--textarea
			resize vertical

	&__button
		float right
		background $brand-primary
		color $white
		font-size 12px
		font-weight bold
		border none
		border-radius 4px
		padding 6px 20px

	&__add-element
		display table
		margin-left auto
		margin-right auto
		position relative
		top -15px
		margin-bottom 10px
		i
			margin-right 10px
		&:hover
			text-decoration none