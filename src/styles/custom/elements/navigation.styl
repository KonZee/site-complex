.navigation
	border-color $gray-lighter
	border-style solid
	border-width 1px 0
	ul
		height 48px
	&__item
		display block
		float left
		a
			display block
			color $black
			font-weight 600
			@media screen and (min-width: $screen-md)
				padding 0 15px
			@media screen and (min-width: $screen-lg)
				padding 0 25px
			span
				display inline-block
				padding 13px 0
				border-bottom 2px solid transparent
				transition border-color 350ms
			&:focus
				outline none
		&:first-child
			a
				@media screen and (min-width: $screen-md)
					padding 0 15px 0 0
				@media screen and (min-width: $screen-lg)
					padding 0 25px 0 0
		&:last-child
			a
				@media screen and (min-width: $screen-md)
					padding 0 0 0 15px
				@media screen and (min-width: $screen-lg)
					padding 0 0 0 25px

		&.active
		&:hover
			a span
				border-bottom-color $brand-primary
