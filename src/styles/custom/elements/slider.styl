.slider
	position relative
	overflow hidden
	height 29vw
	@media screen and (max-width: $screen-sm-max)
		margin-left -15px
		margin-right -15px
	@media screen and (min-width: $screen-sm)
		margin-bottom 25px
		height 212px
	@media screen and (min-width: $screen-md)
		margin-top 25px
		height 276px
	@media screen and (min-width: $screen-lg)
		height 335px
	img
		max-width 100%
		height auto
	a
		display block
		position absolute
		left 40px
		right 50%
		top 50%
		padding 22px 27px
		color $white
		background $brand-primary
		font-size 28px
		font-weight bold
		text-decoration none
		@media screen and (max-width: $screen-sm-max)
			left 50%
			top auto
			bottom 10px
			width calc(100% - 40px)
			transform translateX(-50%)
			text-align center
			padding 8px 12px
			font-size 14px
			white-space nowrap


	&__item
		position absolute
		top 0
		left 0
		bottom 0
		width 100%

	&__nav
		position absolute
		width 24px
		height 24px
		padding 1px 0
		border-radius 2px
		top calc(50% - 47px)
		cursor pointer
		transition 350ms
		.fa
			font-size 22px
			cursor pointer
		&:hover
			background $brand-primary
			color $white
		&--prev
			left 40px
			padding-left 3px
		&--next
			left 64px
			padding-left 6px
		@media screen and (max-width: $screen-xs-max)
			display none